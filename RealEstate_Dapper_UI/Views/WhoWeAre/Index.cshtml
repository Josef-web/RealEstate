@model List<ResultWhoWeAreDetailsDto>

@{
    ViewBag.Title = "Who We Are Details";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Biz Kimiz Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Başlık</th>
                            <th scope="col">Alt Başlık</th>
                            <th scope="col">Sil</th>
                            <th scope="col">güncelle</th>
                        </tr>
                        </thead>
                        <tbody>

                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@item.Title</td>
                                <td>@item.Subtitle</td>
                                <td><a href="/WhoWeAre/DeleteWhoWeAreDetails/@item.WhoWeAreDetailID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/WhoWeAre/UpdateWhoWeAreDetails/@item.WhoWeAreDetailID" class="btn btn-outline-success">Güncelle</a></td>
                            </tr>
                        }
                        </tbody>
                    </table>
                    <a href="/WhoWeAre/CreateWhoWeAreDetails/" class="btn btn-outline-info">Biz Kimiz Alanı Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>
