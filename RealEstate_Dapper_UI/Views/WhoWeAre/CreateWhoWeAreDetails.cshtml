@using Microsoft.AspNetCore.Mvc.TagHelpers
@model CreateWhoWeAreDetailsDto

@{
    ViewBag.Title = "Create WhoWeAreDetails";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div style="padding: 50px">
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-12">
                <div class="bg-light rounded h-100 p-4">
                    <h3 class="mb-4">Biz Kimiz Alanı Ekleme Sayfası</h3>
                    <form method="post">
                        <label for="">Başlık</label>
                        <br/>
                        <input type="text" asp-for="Title" class="form-control">
                        <br/><br/>
                        <label for="">Alt Başlık</label>
                        <br/>
                        <input type="text" asp-for="Subtitle" class="form-control">
                        <br/><br/>
                        <label for="">Açıklama 1</label>
                        <br/>
                        <textarea rows="5" asp-for="Description1" class="form-control"></textarea>
                        <br/><br/>
                        <label for="">Açıklama 2</label>
                        <br/>
                        <textarea rows="5" asp-for="Description2" class="form-control"></textarea>
                        <br/><br/>
                        <button class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>