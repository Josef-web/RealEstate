@using Microsoft.AspNetCore.Mvc.TagHelpers
@model UpdateEmployeeDto

@{
    ViewBag.Title = "Update Employee";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div style="padding: 50px">
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-12">
                <div class="bg-light rounded h-100 p-4">
                    <h3 class="mb-4">Personel Güncelleme Sayfası</h3>
                    <form method="post">
                        <input type="hidden" asp-for="EmployeeID" />
                        <label for="">Personel Adı</label>
                        <br/>
                        <input type="text" asp-for="Name" class="form-control">
                        <br/><br/>
                        <label for="">Personel Unvanı</label>
                        <br/>
                        <input type="text" asp-for="Title" class="form-control">
                        <br/><br/>
                        <label for="">Personel Mail Adresi</label>
                        <br/>
                        <input type="email" asp-for="Mail" class="form-control">
                        <br/><br/>
                        <label for="">Personel Telefon</label>
                        <br/>
                        <input type="number" asp-for="PhoneNumber" class="form-control">
                        <br/><br/>
                        <label for="">Personel Fotoğraf</label>
                        <br/>
                        <input type="text" asp-for="ImageUrl" class="form-control">
                        <br/><br/>
                        <button class="btn btn-success">Bilgileri Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>