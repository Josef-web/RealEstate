@model CreateProductDto

@{
    ViewBag.Title = "Add Product";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div style="padding: 50px">
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-12">
                <div class="bg-light rounded h-100 p-4">
                    <h3 class="mb-4">Yani İlan Ekleme Sayfası</h3>
                    <form method="post">
                        <label>İlan Başlığı</label>
                        <br/>
                        <input type="text" asp-for="Title" class="form-control">
                        <br/><br/>
                        <label>Şehir</label>
                        <br/>
                        <input type="text" asp-for="City" class="form-control">
                        <br/><br/>
                        <label>İlçe</label>
                        <br/>
                        <input type="text" asp-for="District" class="form-control">
                        <br/><br/>
                        <label>Kategori</label>
                        <br/>
                        @* @Html.DropDownListFor(x=>x.ProductCategory,(List<SelectListItem>)ViewBag.v, new {@class="form-control"}) *@
                        <br/><br/>
                        <label>Fiyat</label>
                        <br/>
                        <input type="text" asp-for="Price" class="form-control">
                        <br/><br/>
                        <label>Tür</label>
                        <br/>
                        <input type="text" asp-for="Type" class="form-control">
                        <br/><br/>
                        <label>Kapak Fotoğrafı</label>
                        <br/>
                        <input type="text" asp-for="CoverImage" class="form-control">
                        <br/><br/>
                        <label for="">Açık Adresi</label>
                        <br/>
                        <textarea asp-for="Address" class="form-control" rows="5"></textarea>
                        <br/><br/>
                        <button class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>